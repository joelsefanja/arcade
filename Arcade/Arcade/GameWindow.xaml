<Window x:Class="Arcade.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arcade"
        mc:Ignorable="d"
        Title="GameWindow" Width="1000" Height="500" WindowState="Maximized">
    <Canvas x:Name="MyCanvas"
 Focusable="True"
 Background="lightblue"
 KeyDown="OnKeyDown"
 KeyUp="OnKeyUp">
        <Rectangle x:Name="Player"
 Height="50"
 Width="60"
 Fill="Orange"
 Canvas.Left="500"
 Canvas.Bottom="100"/>
        <Label x:Name="LabelScore"
 Content="Score: 0"
 Foreground="White"
 FontSize="18"
 FontWeight="Bold"/>
        <Label x:Name="LabelDamage"
 Content="Damage: 0"
 Foreground="White"
 FontSize="18"
 FontWeight="Bold"
 Canvas.Top="34"/>
    </Canvas>

</Window>
