<Window x:Class="Arcade.Strip1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arcade"
        mc:Ignorable="d"
        Title="Strip1" Height="450" Width="800" Focusable="True" WindowState="Maximized" WindowStyle="None">
   
    <!--Achtergrond van de Window-->
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/img/MangaStrips/StripStart1.png" />
    </Window.Background>
    
    <!--Grid met een Button om verder te gaan-->
    <Grid>
        <Button x:Name="VerderButton" Click="VerderClick" Height="50" Width="200" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"  Content="Verder" FontFamily="Anime Ace" FontSize="25" Background="#FFF3F1F1" BorderBrush="{x:Null}"></Button>
    </Grid>
    
</Window>
