<Window x:Class="Arcade.NamenInvoeren"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arcade"
        mc:Ignorable="d"
        Title="NamenInvoeren" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <!--Achtergrond van het menu-->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/img/backgrounds/background_layered.png"/>
        </Grid.Background>

        <!--De grid voor het hoofdmenu-->
        <Grid.RowDefinitions>
            <!--7 rijen voor de layout van de knoppen en het spel-titel-->
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Puzzle Platform titel -->
        <Label Grid.Row="0"
               FontFamily="Gill Sans Ultra Bold"
               FontSize="36"
               Content="Puzzle platform" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Auto" Foreground="White" >
            <Label.Background>
                <ImageBrush/>
            </Label.Background>
        </Label>

        <!-- Onder titel -> Geef spelernamen op: -->
        <Label Grid.Row="1"
               FontFamily="Gill Sans Ultra Bold"
               FontSize="18"
               Content="Geef jullie spelernamen op:" 
               FontWeight="Bold" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               Foreground="White" >
            <Label.Background>
                <ImageBrush/>
            </Label.Background>
        </Label>

        <!--Naam invoer voor spelers -->
        <TextBox x:Name="inputPlayer1" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="Speler 1" VerticalAlignment="Center" Width="160" FontFamily="Gill Sans Ultra Bold" FontSize="14" Foreground="#FF465592" Height="36" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="inputPlayer2" HorizontalAlignment="Center" Grid.Row="3" TextWrapping="Wrap" Text="Speler 2" VerticalAlignment="Center" Width="160" FontFamily="Gill Sans Ultra Bold" FontSize="14" Foreground="#FF465592" Height="36" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="start" Grid.Row="3" Margin="288,66,288,0" Grid.RowSpan="2" Content="Start Spel" VerticalAlignment="Center" Width="160" FontFamily="Gill Sans Ultra Bold" FontSize="14" Foreground="#FF465592" Height="36" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" Click="startSpel"></Button>
    </Grid>
</Window>
