<Window x:Class="Arcade.Scores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arcade"
        mc:Ignorable="d"
        Title="Scores" Height="450" Width="800" Focusable="True" WindowState="Maximized" WindowStyle="None">
    
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/img/MangaStrips/StripScores.png"/>
    </Window.Background>
    
    <Grid>
        <Label x:Name="Tijd" Content="Gezamelijke tijd: 00:00" FontSize="25" FontFamily="Anime Ace" Foreground="White" Margin="50" VerticalAlignment="Top" HorizontalAlignment="Center" />
        <Label x:Name="ScoreSpeler1" Content="Munten (naam speler 1)" FontSize="20" FontFamily="Anime Ace" Foreground="White"  Margin="50,100"  VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label x:Name="ScoreSpeler2" Content="Munten (naam speler 2)" FontSize="20" FontFamily="Anime Ace" Foreground="White"  Margin="50,100"  VerticalAlignment="Top" HorizontalAlignment="right"/>
        <Button x:Name="TerugHoofdMenu" Click="TerugHoofdMenuClick" Height="50" Width="200" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="15" Content="Hoofdmenu" FontFamily="Anime Ace" FontSize="25"></Button>
    </Grid>
    
</Window>
